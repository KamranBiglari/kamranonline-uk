---
import Base from "@/layouts/Base.astro";
---

<Base
  title="Message Sent — Thank You"
  meta_title="Thank You | KamranOnline"
  description="Your message has been received. I'll get back to you within 24 hours."
>
  <section class="section-sm text-center">
    <div class="container">
      <div class="row justify-center">
        <div class="sm:col-10 md:col-8 lg:col-6">

          <div class="mb-6 text-6xl">✅</div>

          <h1 class="h2 mb-4">Message Received!</h1>

          <div class="content mb-8">
            <p class="text-lg">
              Thanks for reaching out. I'll review your message and get back to
              you within <strong>24 hours</strong>.
            </p>
            <p class="mt-4 text-text dark:text-darkmode-text">
              In the meantime, feel free to explore the blog or connect on
              LinkedIn.
            </p>
          </div>

          <div class="flex flex-wrap justify-center gap-4">
            <a href="/" class="btn btn-primary">Back to Home</a>
            <a href="/blog" class="btn btn-outline-primary">Read the Blog</a>
          </div>

        </div>
      </div>
    </div>
  </section>
</Base>
